<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_dialog_rep" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:padding="10dp">

		<Button android:text="Ouvrir" android:id="@+id/open"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></Button>
  		<Button android:text="Supprimer" android:id="@+id/delete"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></Button>
		<Button android:text="Annuler" android:id="@+id/buttonCancel"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></Button>
  					
</LinearLayout>