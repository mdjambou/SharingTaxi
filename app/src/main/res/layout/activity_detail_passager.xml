<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7D358"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F7D358"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/departChanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:hint="Départ" />

        <EditText
            android:id="@+id/arriveeChanged"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:ems="10"
            android:hint="Arrivée" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ProgressBar01"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de départ:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/dateDisplayChanged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="date"
                android:text="EditText"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pickDateChanged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modifier"
                android:textSize="12sp" />
        </TableRow>

    </TableLayout>



    <Button
        android:id="@+id/Modifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sauvegarder" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" />


    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
 		
 		<TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ListDepart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#F7D358" 
                android:padding="5px"
                android:text="PASSAGERS"
                android:textStyle="bold" 
                android:textSize="24sp" />
            
             <ImageButton
 			    android:id="@+id/ajoutPassagerButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
 			    android:src="@drawable/ajouter2" />
            
        </TableRow>

    </TableLayout>
	<ProgressBar
        android:id="@+id/ProgressBar01"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" />

    <ListView
        android:id="@+id/listViewMesUsers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>